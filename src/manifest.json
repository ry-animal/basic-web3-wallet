{
  "manifest_version": 3,
  "name": "Basic Web3 Wallet",
  "version": "1.0.0",
  "description": "A simplified Web3 wallet browser extension",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}